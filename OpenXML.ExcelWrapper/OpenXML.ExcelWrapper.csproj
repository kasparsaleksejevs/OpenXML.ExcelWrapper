<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45;net46</TargetFrameworks>
    <Authors>Kaspars Aleksejevs</Authors>
    <Description>Library to abstract complexities encountered when using OpenXML to create MS Excel spreadsheets.  This library exposes only a small subset of OpenXML with the most frequently used functionality - adding cells and setting their style(like alignment, color, boldness).</Description>
    <PackageLicenseUrl>https://github.com/kasparsaleksejevs/OpenXML.ExcelWrapper/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/kasparsaleksejevs/OpenXML.ExcelWrapper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kasparsaleksejevs/OpenXML.ExcelWrapper</RepositoryUrl>
    <PackageTags>OpenXML Excel Wrapper</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="[2.8.0,3.0)" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Drawing.Common">
      <Version>4.5.0</Version>
    </PackageReference>
  </ItemGroup>

</Project>
